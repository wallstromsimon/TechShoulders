---
interface Props {
  title: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article' | 'profile';
  noindex?: boolean;
}

const {
  title,
  description = 'Standing on the shoulders of tech giants - explore the people, works, and institutions that shaped computing history.',
  image,
  type = 'website',
  noindex = false,
} = Astro.props;

const siteUrl = 'https://techshoulders.kihlbergwallstrom.com';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();

// Handle OG image - convert relative paths to absolute URLs
let ogImage: string;
if (image) {
  // If it's already an absolute URL, use it; otherwise prepend site URL
  ogImage = image.startsWith('http') ? image : new URL(image, siteUrl).toString();
} else {
  ogImage = `${siteUrl}/og-default.png`;
}
const fullTitle = title === 'Home' ? 'TechShoulders' : `${title} | TechShoulders`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{fullTitle}</title>

    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    {noindex && <meta name="robots" content="noindex, nofollow" />}

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content="TechShoulders" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="TechShoulders RSS Feed" href="/rss.xml" />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Analytics: Uncomment and configure your preferred analytics provider -->
    <!-- Cloudflare Web Analytics (privacy-friendly, free) -->
    <!-- <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "YOUR_TOKEN"}'></script> -->

    <!-- Or Plausible Analytics (privacy-friendly) -->
    <!-- <script defer data-domain="techshoulders.com" src="https://plausible.io/js/script.js"></script> -->

    <style is:global>
      :root {
        --color-bg: #fafafa;
        --color-text: #1a1a1a;
        --color-muted: #666;
        --color-link: #0066cc;
        --color-border: #e0e0e0;
        --color-card-bg: #fff;
      }

      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
        background: var(--color-bg);
        color: var(--color-text);
        line-height: 1.6;
        max-width: 800px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }

      a {
        color: var(--color-link);
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      h1, h2, h3 {
        line-height: 1.3;
        margin-bottom: 0.5rem;
      }

      h1 {
        font-size: 2rem;
      }

      h2 {
        font-size: 1.5rem;
        margin-top: 1.5rem;
      }

      p {
        margin-bottom: 1rem;
      }

      ul, ol {
        margin-bottom: 1rem;
        padding-left: 1.5rem;
      }

      li {
        margin-bottom: 0.25rem;
      }

      .nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 2rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--color-border);
      }

      .nav-brand {
        flex-shrink: 0;
      }

      .brand-link {
        font-weight: 700;
        font-size: 1.1rem;
        color: var(--color-text);
      }

      .brand-link:hover {
        text-decoration: none;
        color: var(--color-link);
      }

      .nav-links {
        display: flex;
        gap: 1.5rem;
        list-style: none;
        padding: 0;
        margin: 0;
      }

      .nav-links a {
        font-weight: 500;
        font-size: 0.9rem;
      }

      .nav-browse {
        background: var(--color-link);
        color: white !important;
        padding: 0.375rem 0.875rem;
        border-radius: 6px;
        transition: background 0.15s ease;
      }

      .nav-browse:hover {
        background: #0052a3;
        text-decoration: none;
      }

      .card {
        background: var(--color-card-bg);
        border: 1px solid var(--color-border);
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1rem;
      }

      .card h3 {
        margin-bottom: 0.25rem;
      }

      .card .meta {
        color: var(--color-muted);
        font-size: 0.9rem;
      }

      .badge {
        display: inline-block;
        background: var(--color-border);
        padding: 0.125rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-right: 0.5rem;
      }

      .site-footer {
        margin-top: 3rem;
        padding-top: 1.5rem;
        border-top: 1px solid var(--color-border);
        font-size: 0.875rem;
        color: var(--color-muted);
      }

      .footer-links {
        display: flex;
        gap: 1.5rem;
        flex-wrap: wrap;
        margin-bottom: 0.5rem;
      }

      .footer-links a {
        color: var(--color-muted);
      }

      .footer-links a:hover {
        color: var(--color-link);
      }
    </style>
  </head>
  <body>
    <nav class="nav">
      <div class="nav-brand">
        <a href="/" class="brand-link">TechShoulders</a>
      </div>
      <ul class="nav-links">
        <li><a href="/browse" class="nav-browse">Browse</a></li>
        <li><a href="/packs">Packs</a></li>
        <li><a href="/graph">Graph</a></li>
        <li><a href="/people">People</a></li>
        <li><a href="/works">Works</a></li>
        <li><a href="/institutions">Institutions</a></li>
      </ul>
    </nav>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <div class="footer-links">
        <a href="/rss.xml">RSS Feed</a>
        <a href="https://github.com/wallstromsimon/TechShoulders" target="_blank" rel="noopener">GitHub</a>
        <a href="https://github.com/wallstromsimon/TechShoulders/blob/main/CONTRIBUTING.md" target="_blank" rel="noopener">Contribute</a>
      </div>
      <p>Standing on the shoulders of tech giants.</p>
    </footer>
  </body>
</html>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NodeCard from '../../components/NodeCard.astro';
import DomainGraph from '../../components/DomainGraph';
import {
  loadAll,
  buildSearchIndex,
  getAllDomains,
  getDomainStats,
  getNodesForDomain,
  buildDomainGraphData,
  getRelatedDomains,
  type NodeKind,
} from '../../lib/data';
import { getDomainSlug, getDomainColorInfo, slugToDomain } from '../../lib/domainColors';

export async function getStaticPaths() {
  const nodes = await buildSearchIndex();
  const allDomains = getAllDomains(nodes);

  return allDomains.map((domain) => ({
    params: { slug: getDomainSlug(domain) },
    props: { domain },
  }));
}

interface Props {
  domain: string;
}

const { domain } = Astro.props;
const colorInfo = getDomainColorInfo(domain);

// Get all data
const allNodes = await buildSearchIndex();
const stats = getDomainStats(domain, allNodes);
const domainNodes = getNodesForDomain(domain, allNodes);
const { nodes: graphNodes, edges: graphEdges } = await buildDomainGraphData(domain, true);
const relatedDomains = getRelatedDomains([domain], allNodes, 8);

// Get entries for NodeCards
const { people, works, institutions } = await loadAll();

// Map nodes to entries
const nodeEntries = domainNodes.map((node) => {
  let entry;
  if (node.kind === 'people') {
    entry = people.find((p) => p.data.id === node.id);
  } else if (node.kind === 'works') {
    entry = works.find((w) => w.data.id === node.id);
  } else {
    entry = institutions.find((i) => i.data.id === node.id);
  }
  return { entry, kind: node.kind };
}).filter((item) => item.entry !== undefined) as Array<{ entry: any; kind: NodeKind }>;

// Sort by name
nodeEntries.sort((a, b) => a.entry.data.name.localeCompare(b.entry.data.name));
---

<BaseLayout
  title={domain}
  description={`Explore ${stats.total} tech pioneers, works, and institutions related to ${domain}.`}
>
  <div class="domain-header" style={`--domain-color: ${colorInfo.color}; --domain-bg: ${colorInfo.bgColor};`}>
    <div class="domain-badge" style={`background: ${colorInfo.bgColor}; color: ${colorInfo.color}; border-color: ${colorInfo.borderColor};`}>
      Domain
    </div>
    <h1>{domain}</h1>
    <p class="domain-description">
      Explore the people, works, and institutions that shaped {domain.toLowerCase()}.
    </p>

    <div class="domain-stats">
      <div class="stat">
        <span class="stat-value">{stats.total}</span>
        <span class="stat-label">Total</span>
      </div>
      <div class="stat">
        <span class="stat-value" style="color: #e74c3c;">{stats.people}</span>
        <span class="stat-label">People</span>
      </div>
      <div class="stat">
        <span class="stat-value" style="color: #3498db;">{stats.works}</span>
        <span class="stat-label">Works</span>
      </div>
      <div class="stat">
        <span class="stat-value" style="color: #27ae60;">{stats.institutions}</span>
        <span class="stat-label">Institutions</span>
      </div>
    </div>
  </div>

  {relatedDomains.length > 0 && (
    <div class="related-domains">
      <h3>Related Domains</h3>
      <div class="related-tags">
        {relatedDomains.map(({ domain: relDomain, count }) => {
          const relColorInfo = getDomainColorInfo(relDomain);
          return (
            <a
              href={`/domain/${getDomainSlug(relDomain)}`}
              class="related-tag"
              style={`--domain-color: ${relColorInfo.color}; --domain-bg: ${relColorInfo.bgColor}; --domain-border: ${relColorInfo.borderColor};`}
            >
              {relDomain}
              <span class="tag-count">{count}</span>
            </a>
          );
        })}
      </div>
    </div>
  )}

  {graphNodes.length > 1 && (
    <div class="domain-graph-section">
      <h2>Influence Network</h2>
      <p class="section-description">How nodes in this domain are connected.</p>
      <DomainGraph
        client:load
        nodes={graphNodes.map((n) => ({ id: n.id, name: n.name, kind: n.kind }))}
        edges={graphEdges.map((e) => ({ source: e.source, target: e.target, kind: e.kind, label: e.label }))}
        height={350}
      />
    </div>
  )}

  <div class="domain-content">
    <h2>All Items ({stats.total})</h2>

    <div class="filter-tabs">
      <button class="filter-tab active" data-filter="all">All ({stats.total})</button>
      {stats.people > 0 && <button class="filter-tab" data-filter="people">People ({stats.people})</button>}
      {stats.works > 0 && <button class="filter-tab" data-filter="works">Works ({stats.works})</button>}
      {stats.institutions > 0 && <button class="filter-tab" data-filter="institutions">Institutions ({stats.institutions})</button>}
    </div>

    <div class="card-grid" id="card-grid">
      {nodeEntries.map(({ entry, kind }) => (
        <div class="grid-item" data-kind={kind}>
          <NodeCard entry={entry} kind={kind} />
        </div>
      ))}
    </div>
  </div>

  <div class="domain-actions">
    <a href="/browse" class="action-link">Browse All</a>
    <a href={`/graph?domains=${encodeURIComponent(domain)}`} class="action-link primary">View in Full Graph</a>
  </div>
</BaseLayout>

<script>
  const filterTabs = document.querySelectorAll<HTMLButtonElement>('.filter-tab');
  const gridItems = document.querySelectorAll<HTMLElement>('.grid-item');

  filterTabs.forEach((tab) => {
    tab.addEventListener('click', () => {
      // Update active state
      filterTabs.forEach((t) => t.classList.remove('active'));
      tab.classList.add('active');

      const filter = tab.dataset.filter;

      // Filter items
      gridItems.forEach((item) => {
        if (filter === 'all' || item.dataset.kind === filter) {
          item.style.display = '';
        } else {
          item.style.display = 'none';
        }
      });
    });
  });
</script>

<style>

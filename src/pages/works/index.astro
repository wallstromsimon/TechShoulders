---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NodeCard from '../../components/NodeCard.astro';
import { listNodes } from '../../lib/data';

const works = await listNodes('works');
---

<BaseLayout title="Works">
  <div class="page-header">
    <h1>Works</h1>
    <p>Projects, tools, and systems that changed how we build software.</p>
  </div>

  {works.length === 0 ? (
    <p class="empty">No works added yet.</p>
  ) : (
    <div class="card-grid">
      {works.map(work => (
        <NodeCard entry={work} kind="works" />
      ))}
    </div>
  )}
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--color-muted);
    margin: 0;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.25rem;
  }

  .empty {
    color: var(--color-muted);
    font-style: italic;
  }

  @media (max-width: 600px) {
    .card-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

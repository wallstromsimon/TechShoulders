---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NodeCard from '../../components/NodeCard.astro';
import { listNodes } from '../../lib/data';

const institutions = await listNodes('institutions');
---

<BaseLayout title="Institutions">
  <div class="page-header">
    <h1>Institutions</h1>
    <p>Universities, labs, and organizations where innovation happened.</p>
  </div>

  {
    institutions.length === 0 ? (
      <p class="empty">No institutions added yet.</p>
    ) : (
      <div class="card-grid">
        {institutions.map((institution) => (
          <NodeCard entry={institution} kind="institutions" />
        ))}
      </div>
    )
  }
</BaseLayout>

<style>
  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--color-muted);
    margin: 0;
  }

  .card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.25rem;
  }

  .empty {
    color: var(--color-muted);
    font-style: italic;
  }

  @media (max-width: 600px) {
    .card-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

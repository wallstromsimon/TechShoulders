---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { loadAllPacks, getPackCards } from '../../lib/data';

const packs = await loadAllPacks();

// Get card counts for each pack
const packsWithCounts = await Promise.all(
  packs.map(async (pack) => {
    const cards = await getPackCards(pack);
    return {
      pack,
      cardCount: cards.length,
    };
  })
);
---

<BaseLayout title="Packs">
  <div class="packs-header">
    <h1>Learning Packs</h1>
    <p>Curated collections of people, works, and institutions organized by theme. Each pack provides a guided learning path through a topic.</p>
  </div>

  <div class="packs-grid">
    {packsWithCounts.map(({ pack, cardCount }) => (
      <a href={`/packs/${pack.data.id}`} class="pack-card">
        <div class="pack-icon">{pack.data.icon || 'ðŸ“¦'}</div>
        <div class="pack-content">
          <h2 class="pack-title">{pack.data.name}</h2>
          <p class="pack-description">{pack.data.description}</p>
          <div class="pack-meta">
            <span class="card-count">{cardCount} cards</span>
            <span class="pack-cta">Start learning â†’</span>
          </div>
        </div>
      </a>
    ))}
  </div>

  {packs.length === 0 && (
    <div class="empty-state">
      <p>No packs available yet. Check back soon!</p>
    </div>
  )}
</BaseLayout>

<style>
  .packs-header {
    margin-bottom: 2rem;
  }

  .packs-header h1 {
    margin-bottom: 0.5rem;
  }

  .packs-header p {
    color: var(--color-muted);
    margin: 0;
    max-width: 600px;
  }

  .packs-grid {
    display: grid;
    gap: 1.5rem;
  }

  .pack-card {
    display: flex;
    gap: 1.25rem;
    padding: 1.5rem;
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
  }

  .pack-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    border-color: var(--color-link);
    text-decoration: none;
  }

  .pack-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-bg);
    border-radius: 12px;
  }

  .pack-content {
    flex: 1;
    min-width: 0;
  }

  .pack-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: var(--color-text);
  }

  .pack-description {
    font-size: 0.9rem;
    color: var(--color-muted);
    margin: 0 0 1rem 0;
    line-height: 1.5;
  }

  .pack-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 0.85rem;
  }

  .card-count {
    color: var(--color-muted);
    background: var(--color-bg);
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
  }

  .pack-cta {
    color: var(--color-link);
    font-weight: 500;
  }

  .pack-card:hover .pack-cta {
    text-decoration: underline;
  }

  .empty-state {
    text-align: center;
    padding: 3rem;
    color: var(--color-muted);
  }

  @media (max-width: 500px) {
    .pack-card {
      flex-direction: column;
      align-items: flex-start;
    }

    .pack-icon {
      width: 48px;
      height: 48px;
      font-size: 1.75rem;
    }
  }
</style>

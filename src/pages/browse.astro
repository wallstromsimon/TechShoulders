---
import BaseLayout from '../layouts/BaseLayout.astro';
import BrowseClient from '../components/BrowseClient';
import { buildSearchIndex, getAllDomains, loadAllEdges } from '../lib/data';

const nodes = await buildSearchIndex();
const allDomains = getAllDomains(nodes);
const edges = await loadAllEdges();
---

<BaseLayout title="Browse">
  <div class="browse-header">
    <h1>Browse Collection</h1>
    <p>Explore the people, works, and institutions that shaped modern technology.</p>
  </div>

  <BrowseClient
    client:load
    nodes={nodes}
    edges={edges}
    allDomains={allDomains}
  />
</BaseLayout>

<style>
  .browse-header {
    margin-bottom: 2rem;
  }

  .browse-header h1 {
    margin-bottom: 0.5rem;
  }

  .browse-header p {
    color: var(--color-muted);
    margin: 0;
  }
</style>

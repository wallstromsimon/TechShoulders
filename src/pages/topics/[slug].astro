---
import BaseLayout from '../../layouts/BaseLayout.astro';
import NodeCard from '../../components/NodeCard.astro';
import DomainGraph from '../../components/DomainGraph';
import {
  loadAll,
  buildSearchIndex,
  getBuiltInTopics,
  getTopicBySlug,
  getTopicStats,
  getNodesForTopic,
  buildTopicGraphData,
  type TopicDefinition,
  type NodeKind,
} from '../../lib/data';
import { getDomainColorInfo, getDomainSlug } from '../../lib/domainColors';

export async function getStaticPaths() {
  const topics = getBuiltInTopics();

  return topics.map((topic) => ({
    params: { slug: topic.slug },
    props: { topic },
  }));
}

interface Props {
  topic: TopicDefinition;
}

const { topic } = Astro.props;

// Get all data
const allNodes = await buildSearchIndex();
const stats = getTopicStats(topic, allNodes);
const topicNodes = getNodesForTopic(topic, allNodes);
const { nodes: graphNodes, edges: graphEdges } = await buildTopicGraphData(topic, true);

// Get entries for NodeCards
const { people, works, institutions } = await loadAll();

// Map nodes to entries
const nodeEntries = topicNodes.map((node) => {
  let entry;
  if (node.kind === 'people') {
    entry = people.find((p) => p.data.id === node.id);
  } else if (node.kind === 'works') {
    entry = works.find((w) => w.data.id === node.id);
  } else {
    entry = institutions.find((i) => i.data.id === node.id);
  }
  return { entry, kind: node.kind };
}).filter((item) => item.entry !== undefined) as Array<{ entry: any; kind: NodeKind }>;

// Sort by name
nodeEntries.sort((a, b) => a.entry.data.name.localeCompare(b.entry.data.name));

// Get other topics for navigation
const allTopics = getBuiltInTopics();
const otherTopics = allTopics.filter((t) => t.slug !== topic.slug).slice(0, 4);
---

<BaseLayout
  title={topic.name}
  description={topic.description}
>
  <div class="topic-header">
    <div class="topic-icon">{topic.icon}</div>
    <div class="topic-badge">Topic</div>
    <h1>{topic.name}</h1>
    <p class="topic-description">{topic.description}</p>

    <div class="topic-stats">
      <div class="stat">
        <span class="stat-value">{stats.total}</span>
        <span class="stat-label">Total</span>
      </div>
      <div class="stat">
        <span class="stat-value" style="color: #e74c3c;">{stats.people}</span>
        <span class="stat-label">People</span>
      </div>
      <div class="stat">
        <span class="stat-value" style="color: #3498db;">{stats.works}</span>
        <span class="stat-label">Works</span>
      </div>
      <div class="stat">
        <span class="stat-value" style="color: #27ae60;">{stats.institutions}</span>
        <span class="stat-label">Institutions</span>
      </div>
    </div>
  </div>

  <div class="included-domains">
    <h3>Included Domains</h3>
    <div class="domain-tags">
      {topic.domains.map((domain) => {
        const colorInfo = getDomainColorInfo(domain);
        return (
          <a
            href={`/domain/${getDomainSlug(domain)}`}
            class="domain-tag"
            style={`--domain-color: ${colorInfo.color}; --domain-bg: ${colorInfo.bgColor}; --domain-border: ${colorInfo.borderColor};`}
          >
            {domain}
          </a>
        );
      })}
    </div>
  </div>

  {graphNodes.length > 1 && (
    <div class="topic-graph-section">
      <h2>Influence Network</h2>
      <p class="section-description">How nodes in this topic are connected.</p>
      <DomainGraph
        client:load
        nodes={graphNodes.map((n) => ({ id: n.id, name: n.name, kind: n.kind }))}
        edges={graphEdges.map((e) => ({ source: e.source, target: e.target, kind: e.kind, label: e.label }))}
        height={400}
      />
    </div>
  )}

  <div class="topic-content">
    <h2>All Items ({stats.total})</h2>

    <div class="filter-tabs">
      <button class="filter-tab active" data-filter="all">All ({stats.total})</button>
      {stats.people > 0 && <button class="filter-tab" data-filter="people">People ({stats.people})</button>}
      {stats.works > 0 && <button class="filter-tab" data-filter="works">Works ({stats.works})</button>}
      {stats.institutions > 0 && <button class="filter-tab" data-filter="institutions">Institutions ({stats.institutions})</button>}
    </div>

    <div class="card-grid" id="card-grid">
      {nodeEntries.map(({ entry, kind }) => (
        <div class="grid-item" data-kind={kind}>
          <NodeCard entry={entry} kind={kind} />
        </div>
      ))}
    </div>
  </div>

  {otherTopics.length > 0 && (
    <div class="other-topics">
      <h3>Explore More Topics</h3>
      <div class="topic-links">
        {otherTopics.map((t) => (
          <a href={`/topics/${t.slug}`} class="topic-link">
            <span class="topic-link-icon">{t.icon}</span>
            <span class="topic-link-name">{t.name}</span>
          </a>
        ))}
        <a href="/topics" class="topic-link view-all">
          <span class="topic-link-name">View All Topics</span>
        </a>
      </div>
    </div>
  )}

  <div class="topic-actions">
    <a href="/topics" class="action-link">All Topics</a>
    <a href="/browse" class="action-link">Browse All</a>
    <a href={`/graph?domains=${encodeURIComponent(topic.domains.join(','))}`} class="action-link primary">View in Full Graph</a>
  </div>
</BaseLayout>

<script>
  const filterTabs = document.querySelectorAll<HTMLButtonElement>('.filter-tab');
  const gridItems = document.querySelectorAll<HTMLElement>('.grid-item');

  filterTabs.forEach((tab) => {
    tab.addEventListener('click', () => {
      // Update active state
      filterTabs.forEach((t) => t.classList.remove('active'));
      tab.classList.add('active');

      const filter = tab.dataset.filter;

      // Filter items
      gridItems.forEach((item) => {
        if (filter === 'all' || item.dataset.kind === filter) {
          item.style.display = '';
        } else {
          item.style.display = 'none';
        }
      });
    });
  });
</script>


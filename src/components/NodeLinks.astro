---
interface Props {
  links?: Array<{
    label: string;
    url: string;
  }>;
}

const { links } = Astro.props;
---

{
  links && links.length > 0 && (
    <section class="links">
      <h3>Links</h3>
      <ul>
        {links.map((link) => (
          <li>
            <a href={link.url} target="_blank" rel="noopener noreferrer">
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </section>
  )
}

<style>
  .links {
    margin-top: 1.5rem;
  }

  .links h3 {
    font-size: 1rem;
    margin-bottom: 0.5rem;
  }

  .links ul {
    list-style: disc;
    padding-left: 1.5rem;
    margin: 0;
  }
</style>

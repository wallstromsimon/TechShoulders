---
import type { NodeKind, PersonEntry, WorkEntry, InstitutionEntry, AnyEntry } from '../lib/data';
import { getKindLabel } from '../lib/data';

interface Props {
  entry: AnyEntry;
  kind: NodeKind;
  variant?: 'default' | 'compact' | 'featured';
  relationshipLabel?: string;
}

const { entry, kind, variant = 'default', relationshipLabel } = Astro.props;
const { data } = entry;
const kindLabel = getKindLabel(kind);

// Build metadata based on kind
let subtitle = '';
let domains: string[] = [];

if (kind === 'people') {
  const person = data as PersonEntry['data'];
  subtitle = person.era;
  domains = person.domains || [];
} else if (kind === 'works') {
  const work = data as WorkEntry['data'];
  subtitle = `${work.kind} · ${work.year}`;
  domains = work.domains || [];
} else if (kind === 'institutions') {
  const inst = data as InstitutionEntry['data'];
  subtitle = inst.kind;
  if (inst.location) {
    subtitle += ` · ${inst.location}`;
  }
}

const hasImage = !!data.image?.url;
---

<a href={`/node/${data.id}`} class={`node-card ${variant} kind-${kind}`}>
  <div class="card-inner">
    {hasImage && variant !== 'compact' && (
      <div class="card-image">
        <img src={data.image!.url} alt={data.name} loading="lazy" />
      </div>
    )}

    <div class="card-content">
      <div class="card-header">
        <span class={`badge badge-${kind}`}>{kindLabel}</span>
        {kind === 'works' && (
          <span class="year">{(data as WorkEntry['data']).year}</span>
        )}
      </div>

      <h3 class="card-title">{data.name}</h3>

      {relationshipLabel && (
        <p class="relationship-label">— {relationshipLabel}</p>
      )}

      {kind === 'people' && (data as PersonEntry['data']).title && (
        <p class="card-subtitle">{(data as PersonEntry['data']).title}</p>
      )}

      <p class="card-meta">{subtitle}</p>

      {domains.length > 0 && variant !== 'compact' && (
        <div class="card-domains">
          {domains.slice(0, 3).map(domain => (
            <span class="domain-tag">{domain}</span>
          ))}
        </div>
      )}
    </div>
  </div>
</a>

<style>
  .node-card {
    display: block;
    text-decoration: none;
    color: inherit;
    background: var(--color-card-bg);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
  }

  .node-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    text-decoration: none;
  }

  /* Kind-specific accent colors */
  .node-card.kind-people {
    border-left: 3px solid #e74c3c;
  }

  .node-card.kind-people:hover {
    border-color: #e74c3c;
  }

  .node-card.kind-works {
    border-left: 3px solid #3498db;
  }

  .node-card.kind-works:hover {
    border-color: #3498db;
  }

  .node-card.kind-institutions {
    border-left: 3px solid #27ae60;
  }

  .node-card.kind-institutions:hover {
    border-color: #27ae60;
  }

  .card-inner {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .card-image {
    width: 100%;
    height: 160px;
    overflow: hidden;
    background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .node-card:hover .card-image img {
    transform: scale(1.05);
  }

  .card-content {
    padding: 1rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .badge {
    display: inline-block;
    padding: 0.125rem 0.5rem;
    border-radius: 4px;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge-people {
    background: #fce4e4;
    color: #c0392b;
  }

  .badge-works {
    background: #e3f2fd;
    color: #1565c0;
  }

  .badge-institutions {
    background: #e8f5e9;
    color: #2e7d32;
  }

  .year {
    font-size: 0.8rem;
    color: var(--color-muted);
    font-weight: 500;
  }

  .card-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 0.25rem 0;
    line-height: 1.3;
  }

  .card-subtitle {
    font-size: 0.85rem;
    color: var(--color-muted);
    margin: 0 0 0.25rem 0;
    font-style: italic;
  }

  .relationship-label {
    font-size: 0.8rem;
    color: var(--color-link);
    margin: 0 0 0.25rem 0;
    font-weight: 500;
  }

  .card-meta {
    font-size: 0.8rem;
    color: var(--color-muted);
    margin: 0;
  }

  .card-domains {
    margin-top: auto;
    padding-top: 0.75rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.25rem;
  }

  .domain-tag {
    display: inline-block;
    padding: 0.125rem 0.375rem;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 3px;
    font-size: 0.7rem;
    color: var(--color-muted);
  }

  /* Compact variant */
  .node-card.compact {
    border-radius: 8px;
  }

  .node-card.compact .card-content {
    padding: 0.75rem;
  }

  .node-card.compact .card-title {
    font-size: 0.95rem;
  }

  /* Featured variant */
  .node-card.featured {
    border-radius: 16px;
  }

  .node-card.featured .card-image {
    height: 200px;
  }

  .node-card.featured .card-content {
    padding: 1.25rem;
  }

  .node-card.featured .card-title {
    font-size: 1.25rem;
  }
</style>
